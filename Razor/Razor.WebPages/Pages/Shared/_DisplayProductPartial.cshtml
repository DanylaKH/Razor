@using Razor.WebPages.Models;
@model Product

@{

    var photoPath = $"/images/{Model.PhotoPath}";
    var showButtons = (bool)ViewData["ShowButtons"];
}


<div class="card-deck">
    <div class="card m-3">
        <div class="card-header text-center">
            <h3>@Model.name</h3>
        </div>
        <div class="card-body text-center">
            <img class="card-img-top imageThumnail" src="@photoPath" asp-append-version="true" />
        </div>

        @if (showButtons)
        {
            <div class="card-footer text-center">
                <a asp-page="/Products/Details" asp-route-ID="@Model.id" class="btn btn-success m-1">View</a>
                <a asp-page="/Products/Edit" asp-route-ID="@Model.id" class="btn btn-primary m-1">Edit</a>
                <a asp-page="/Products/Delete" asp-route-ID="@Model.id" class="btn btn-danger m-1">Delete</a>
            </div>
        }
    </div>
</div>
