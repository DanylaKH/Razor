@page
@model Razor.WebPages.Pages.Products.ProductsModel
@{
    ViewData["ShowButtons"] = true;
}

@if (TempData["SeccessMessage"] != null)
{
    <div class="alert-success text-center">
        @TempData["SeccessMessage"]
    </div>
}

<form method="get" class="mb-3">
    <div class="input-group">
        <input class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn-primary">Search</button>
        </div>
    </div>
</form>

<h1>Products</h1>

<div class="row">
    @foreach (var item in Model.products)
    {
        <div class="col-12 col-sm-6 col-lg-4">
            <partial name="_DisplayProductPartial" model="item" view-data="ViewData" />
        </div>
    }
</div>